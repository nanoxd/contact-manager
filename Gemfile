source 'https://rubygems.org'

gem 'rails', '3.2.14'
gem 'unicorn'
gem 'jquery-rails'
gem 'omniauth'
gem 'omniauth-twitter'
gem 'simple_form'


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
  gem 'haml'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'sqlite3'
  gem 'capybara'
  gem 'fabrication'
  gem 'better_errors'
  gem 'binding_of_caller'
end

group :production do
  gem 'pg'
end
