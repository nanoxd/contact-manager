= form_for(@company) do |f|
  - if @company.errors.any?
    .col-span-4
      %h2
        = pluralize(@company.errors.count, "error")
        prohibited this company from being saved:
      %ul
        - @company.errors.full_messages.each do |msg|
          %li= msg
  .form-control
    = f.label :name, class: 'form-control'
    %br/
  .form-control.col-lg-10
    = f.text_field :name
    = f.hidden_field :user_id
  .form-group.col-lg-offset-2.col-lg-10
    = f.submit "Create Company", class: 'btn btn-default'
